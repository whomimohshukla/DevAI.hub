# Server
PORT=3000

# Database
MONGO_URI=mongodb://localhost:27017/devaihub

# Providers
OPENAI_API_KEY=sk-xxxxx

# Rate limiting (requests per minute per API key)
RATE_LIMIT_PER_MINUTE=60

# App URLs (used by Stripe redirects and CORS on your frontend)
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Clerk (Auth) â€” required for dashboard/admin
# Get these from your Clerk dashboard
CLERK_SECRET_KEY=sk_test_****************
CLERK_PUBLISHABLE_KEY=pk_test_****************
# Clerk Webhook (Svix) secret to verify /webhooks/clerk events
CLERK_WEBHOOK_SECRET=whsec_****************
# Comma separated admin emails; these users will be granted admin role on sync
ADMIN_EMAILS=admin@example.com

# Stripe (Billing)
# Secret key for API calls
STRIPE_SECRET_KEY=sk_test_****************
# Webhook signing secret for /webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_****************

# Optional: Redis (recommended for production rate limiting/quotas)
REDIS_URL=redis://localhost:6379

# CORS / Security (optional)
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info
NODE_ENV=development
